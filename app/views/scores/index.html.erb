<h1>Scores for <%= @puzzle.name %></h1>
<section class="scores-container">
  <ol class="scores-list">
    <% @scores.each do |score| %>
    <li class="score-item">
      <span
        ><%= score.name %>:
        <span><%= score.score %>s</span>
      </span>
    </li>
    <%end%>
  </ol>
</section>

<%= link_to "Home", root_path %>
